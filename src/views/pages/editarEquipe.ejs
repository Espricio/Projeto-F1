<link rel="stylesheet" href="../../css/editarEquipe.css">

<section class="editarEquipe">
    <h1>Editar Informações da Equipe</h1>

    <form class="form-equipe" action="/salvarEdicaoEquipe" method="POST">
        
        <input type="hidden" name="id_equipe" value="<%= data.id_equipe %>">

        <div class="form-group">
            <label for="nome">Nome da Equipe:</label>
            <input type="text" id="nome" name="nome" value="<%= data.nome %>" required>
        </div>

        <div class="form-group">
            <label for="pais">País:</label>
            <input type="text" id="pais" name="pais" value="<%= data.pais %>" required>
        </div>

        <div class="form-group">
            <label for="logo">Chefe de Equipe:</label>
            <input type="text" id="chefe_equipe" name="chefe_equipe" value="<%= data.chefe_equipe %>" required>
        </div>

        <div class="form-group">
            <button type="submit">Salvar Alterações</button>
        </div>
    </form>
</section>